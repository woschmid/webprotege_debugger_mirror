<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:import field="edu.stanford.bmir.protege.web.shared.individuals.InstanceRetrievalMode.*"/>
    <ui:style>
        .searchBox {
            flex-grow: 0;
            flex-shrink: 0;
            padding: 2px;
            margin: 1px;
            border-bottom: 1px solid literal("var(--inlay-panel--background-color)");
            color:blue;
        }
        .main {
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: stretch;
            padding: 1px;
            box-sizing: border-box;
        }
        .typeFieldContainer {
            margin-bottom: 0.3rem;
        }

        .typeGroup {
            display: flex;
            flex-direction: column;
            width: 100%;
            height: 100%;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main} {wp.style.panelFilled}">
        <g:ScrollPanel  addStyleNames="{style.typeGroup}">
            <g:FlexTable ui:field="table" width="100%" />
        </g:ScrollPanel>
    </g:HTMLPanel>
</ui:UiBinder>