<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:import field="edu.stanford.bmir.protege.web.shared.individuals.InstanceRetrievalMode.*"/>
    <ui:style>
        .main {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        padding: 1px;
        box-sizing: border-box;
        }
        .searchBox {
        flex-grow: 0;
        flex-shrink: 0;
        padding: 2px;
        margin: 1px;
        border-bottom: 1px solid literal("var(--inlay-panel--background-color)");
        }
        .individualsList {
        <!--            flex-grow: 1;-->
        <!--            flex-shrink: 1;-->
        <!--            overflow: auto;-->
        background-color: literal("var(--primary--background-color)");
        border: 1px solid literal("var(--alternate--separator--color)");
        margin: 1px;
        }
        .typeGroup {
        flex-grow: 0;
        flex-shrink: 0;
        }
        .levelRadio {
        padding-left: 10px;
        }
        .executeButton {
        <!--            align-self: flex-start;-->
        flex-grow: 0;
        flex-shrink: 0;
        }
        .newTabButton {
        flex-grow: 0;
        flex-shrink: 0;
        margin-right: 5px;
        }
        .criteriaContainer {
        flex-grow: 0;
        flex-shrink: 0;
        margin-bottom: 10px;
        }
        .classNavButton {
        flex-grow: 0;
        flex-shrink: 0;
        }
        .form-label {
        font-weight: bold;
        font-size: 17px;
        }
        .textArea {
        height: 100%;
        width: 99%;
        overflow: inherit;
        }
        .editor{
        display: contents;
        background-color: literal("var(--primary--background-color)");
        border: 1px solid literal("var(--alternate--separator--color)");
        margin: 1px;
        }
    </ui:style>


    <g:HTMLPanel addStyleNames="{style.main} {wp.style.panelFilled}">

        <g:HorizontalPanel width="100%">
            <g:cell horizontalAlignment="ALIGN_LEFT" width="100%" >
                <g:Label text="Shacl Validation Document Editor" addStyleNames="{style.form-label}"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:Button ui:field="editButton" text="Setting" title="Setting" addStyleNames="{wp.buttons.btnGlyph} {wp.buttons.settings} {style.classNavButton}"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:Button ui:field="helpButton" text="Help" title="Help" addStyleNames="{wp.buttons.btnGlyph} {wp.buttons.questionSmall} {style.classNavButton}"/>
            </g:cell>
        </g:HorizontalPanel>

        <g:HorizontalPanel width="100%">
            <g:cell horizontalAlignment="ALIGN_LEFT" >
                <g:Button ui:field="openButton" text="Open"  title="Open Shacl Document"  addStyleNames="{style.executeButton} {wp.buttons.button} {wp.buttons.dialogButton} {wp.buttons.primaryButton}"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_LEFT" >
                <g:Button ui:field="saveButton" text="Save"  title="Save Shacl Document" addStyleNames="{style.executeButton} {wp.buttons.button} {wp.buttons.dialogButton} {wp.buttons.primaryButton}"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT" width="100%" >
                <g:Button ui:field="runButton" text="Run" title="Save Shacl Validate" addStyleNames="{style.newTabButton} {wp.buttons.button} {wp.buttons.dialogButton} {wp.buttons.primaryButton}"/>
            </g:cell>
        </g:HorizontalPanel>

        <g:HTMLPanel addStyleNames="{style.editor}">
            <g:TextArea ui:field='ContentArea' styleName='{style.textArea}'></g:TextArea>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>