<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:import field="edu.stanford.bmir.protege.web.shared.individuals.InstanceRetrievalMode.*"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            padding: 1px;
            box-sizing: border-box;
        }
        .typeFieldContainer {
            margin-bottom: 0.3rem;
        }
        .searchBox {
            flex-grow: 0;
            flex-shrink: 0;
            padding: 2px;
            margin: 1px;
            border-bottom: 1px solid literal("var(--inlay-panel--background-color)");
        }
        .individualsList {
<!--            flex-grow: 1;-->
<!--            flex-shrink: 1;-->
<!--            overflow: auto;-->
            background-color: literal("var(--primary--background-color)");
            border: 1px solid literal("var(--alternate--separator--color)");
            margin: 1px;
        }
        .bottomBar {
            background-color: literal("var(--inlay-panel--background-color)");
        }
        .typeGroup {
            flex-grow: 0;
            flex-shrink: 0;
        }
        .listGroup {
            display: flex;
            flex-direction: column;
            flex-shrink: 1;
            flex-grow: 1;
        }
        .levelField {
            display: flex;
            flex-wrap: wrap;
            flex-direction: row;
        }
        .levelField > span {
            padding: 5px;
        }
        .levelRadio {
            padding-left: 10px;
        }
        .executeButton {
<!--            align-self: flex-start;-->
            flex-grow: 0;
            flex-shrink: 0;
        }
        .newTabButton {
            flex-grow: 0;
            flex-shrink: 0;
            margin-right: 5px;
        }
        .criteriaContainer {
            flex-grow: 0;
            flex-shrink: 0;
            margin-bottom: 10px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main} {wp.style.panelFilled}">

        <div class="{style.typeGroup}">
            <g:Label text="Queries" addStyleNames="{wp.style.formLabel}"/>
        </div>

        <g:HorizontalPanel width="100%">
            <g:cell horizontalAlignment="ALIGN_LEFT" >
                <g:Button ui:field="startButton" text="Start"  addStyleNames="{style.executeButton} {wp.buttons.button} {wp.buttons.dialogButton} {wp.buttons.primaryButton}"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_LEFT" >
                <g:Button ui:field="stopButton" text="Stop"  addStyleNames="{style.executeButton} {wp.buttons.button} {wp.buttons.dialogButton} {wp.buttons.primaryButton}"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT" width="100%" >
                <g:Button ui:field="submitButton" text="Submit" addStyleNames="{style.newTabButton} {wp.buttons.button} {wp.buttons.dialogButton} {wp.buttons.primaryButton}"/>
            </g:cell>
        </g:HorizontalPanel>

        <g:HTMLPanel addStyleNames="{style.individualsList}">
            <g:Label text="Please answer if these statements are true(+) or not true(-) in your intended domain" addStyleNames="{style.searchBox}"/>
            <g:SimplePanel ui:field="criteriaContainer"  height="100%" />
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>