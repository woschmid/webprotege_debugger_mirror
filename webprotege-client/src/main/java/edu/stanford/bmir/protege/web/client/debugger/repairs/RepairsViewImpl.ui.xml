<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            height : 100%;
            display: flex;
            flex-direction: column;
            align-items: stretch;
            padding: 1px;
            box-sizing: border-box;
        }
        .individualsList {
            flex-grow: 1;
            flex-shrink: 1;
            overflow: auto;
            background-color: literal("var(--primary--background-color)");
            border: 1px solid literal("var(--alternate--separator--color)");
            margin: 1px;
        }
        .typeGroup {
            flex-grow: 0;
            flex-shrink: 0;
        }

        .criteriaContainer {
            flex-grow: 0;
            flex-shrink: 0;
            margin-bottom: 10px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main} {wp.style.panelFilled}">
        <div class="{style.typeGroup}">
            <g:Label text="Possible Ontology Reqairs" addStyleNames="{wp.style.formLabel}"/>
        </div>
        <g:HTMLPanel addStyleNames="{style.individualsList}">
            <g:SimplePanel ui:field="criteriaContainer" />
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>