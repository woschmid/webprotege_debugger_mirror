<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.library.text"
             xmlns:pagination="urn:import:edu.stanford.bmir.protege.web.client.pagination"
             xmlns:progress="urn:import:edu.stanford.bmir.protege.web.client.progress"
             xmlns:list="urn:import:edu.stanford.bmir.protege.web.client.list"
>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:import field="edu.stanford.bmir.protege.web.shared.individuals.InstanceRetrievalMode.*"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            padding: 1px;
            box-sizing: border-box;
        }
        .typeFieldContainer {
            margin-bottom: 0.3rem;
        }
        .searchBox {
            flex-grow: 0;
            flex-shrink: 0;
            padding: 2px;
            margin: 1px;
            border-bottom: 1px solid literal("var(--inlay-panel--background-color)");
        }
        .statusLabel {
            flex-grow: 0;
            flex-shrink: 0;
            padding: 3px;
            border-top: 1px solid literal("var(--inlay-panel--background-color)");
            padding-right: 10px;
        }
        .individualsList {
            width: 100%;
            height: 100%;
<!--            overflow: auto;-->
            background-color: literal("var(--primary--background-color)");
            border: 1px solid literal("var(--alternate--separator--color)");
            margin: 1px;
        }
        .bottomBar {
            background-color: literal("var(--inlay-panel--background-color)");
        }
        .typeGroup {
<!--            position: absolute;-->
<!--            overflow: hidden;-->
            left: 0px;
            top: 0px;
            width: 100%;
            height: 100%;
        }
        .listGroup {
            display: flex;
            flex-direction: column;
            flex-shrink: 1;
            flex-grow: 1;
        }
        .levelField {
            display: flex;
            flex-wrap: wrap;
            flex-direction: row;
        }
        .levelField > span {
            padding: 5px;
        }
        .levelRadio {
            padding-left: 10px;
        }
        .viewGroup {
<!--            position: absolute;-->
            overflow: hidden;
            left: 0px;
            top: 0px;
            width: 100%;
            height: 100%;
        }
        .FlowPanelview {
            width: 100%;
            height: 50%;
            background-color: literal("var(--primary--background-color)");
            border: 1px solid literal("var(--alternate--separator--color)");
            margin: 1px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main} {wp.style.panelFilled}">
        <g:HorizontalPanel ui:field="verticalPanel"  addStyleNames="{style.typeGroup}">
            <g:FlowPanel addStyleNames="{style.viewGroup}" >
                <g:SimplePanel ui:field="queriesContainer"  addStyleNames="{style.FlowPanelview}" />
                <g:SimplePanel ui:field="repairsContainer"  addStyleNames="{style.FlowPanelview}"/>
            </g:FlowPanel >
            <g:FlowPanel addStyleNames=" {style.viewGroup}" >
                <g:SimplePanel ui:field="testcasesContainer"  addStyleNames="{style.individualsList}"/>
            </g:FlowPanel>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>